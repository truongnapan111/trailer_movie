
<div class="wrapper-create">
    <h3>Updates Film</h3>

    <form method="POST" action="/films/{{film._id}}?_method=PUT">
        <div class="form-create">
            <label for="name">Name</label>
            <input type="text" class="create-input" value="{{film.name}}" id="name" name="name">
        </div>
        <div class="form-create">
            <label for="category">Category</label>
            <input type="text" class="create-input" value="{{film.category}}" id="category" name="category">
        </div>
        <div class="form-create">
            <label for="video">Video</label>
            <input type="text" class="create-input" value="{{film.videoId}}" id="videoId" name="videoId">
        </div>
        
        <button type="submit" class="create-submit">SAVE</button>
        
    </form>
</div>